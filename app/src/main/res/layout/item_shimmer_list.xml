<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_name"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_margin="@dimen/_11sdp"
        android:background="@color/color_primary_variant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_full_name"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/color_primary_variant"
        app:layout_constraintStart_toStartOf="@+id/v_name"
        app:layout_constraintTop_toBottomOf="@id/v_name" />

    <View
        android:id="@+id/v_price"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_margin="@dimen/_11sdp"
        android:background="@color/color_primary_variant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@color/color_primary_variant"
        app:layout_constraintStart_toStartOf="@+id/v_price"
        app:layout_constraintTop_toBottomOf="@id/v_price" />

    <Space
        android:id="@+id/space_separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_11sdp"
        app:layout_constraintTop_toBottomOf="@id/v_full_name" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/color_primary_variant"
        app:layout_constraintTop_toBottomOf="@+id/space_separator" />

</androidx.constraintlayout.widget.ConstraintLayout>
